<% include ../partials/header %>

    <div class = "row"></div>
        <h1 style = "text-align: center">Create a new Restaurant</h1>
        <div style = "width: 30%; margin: 25px auto">
            <form action = "/restaurant" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "name" placeholder = "Name">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "image" placeholder = "Image Url">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "description" placeholder = "Description">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" id="location" placeholder="Location of Restaurant">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-default btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href = "/restaurant">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>