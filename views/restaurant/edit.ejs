<% include ../partials/header %>

    <div class = "row"></div>
        <h1 style = "text-align: center">Edit <%= restaurant.name %></h1>
        <div style = "width: 30%; margin: 35px auto">
            <form action = "/restaurant/<%= restaurant._id %>?_method=PUT" method = "POST">
                <div class = "form-group">
                    <label for="location">Restaurant Name:</label>
                    <input class = "form-control" type = "text" name = "restaurant[name]" value = "<%= restaurant.name %>">
                </div>
                <div class = "form-group">
                    <label for="location">Image:</label>
                    <input class = "form-control" type = "text" name = "restaurant[image]" value = "<%= restaurant.image %>">
                </div>
                <div class = "form-group">
                    <label for="location">Description:</label>
                    <input class = "form-control" type = "text" name = "restaurant[description]" value = "<%= restaurant.description%>">
                </div>
                <div class="form-group">
                    <label for="location">Location:</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= restaurant.location %>">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-default btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href = "/restaurant">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>