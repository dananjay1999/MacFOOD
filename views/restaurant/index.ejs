<% include ../partials/header %>
  
    <header class = "jumbotron">
        <div class = "container">
        <h1>Welcome to MACFood!</h1>
        <p>View our hand-picked restaurants that are closest to McMaster University!</p>
        <p>
            <a class = "btn btn-primary btn-lg" href = "/restaurant/new">Add New Restaurant</a>
        </p>
        </div>
    </header>
    
    
    <div class = "row text-center" style = "display:flex; flex-wrap: wrap;">
        <% restaurant.forEach(function(restaurant){ %>
        <div class = "col-md-3 col-sm-6">
            <div class = "thumbnail">
                <img src = "<%= restaurant.image %>">
                <div class = "caption">
                    <h4><%= restaurant.name %></h4>
                </div>
                <p>
                    <a href = "/restaurant/<%= restaurant._id %>" class = "btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <% }); %>  
    </div>


<% include ../partials/footer %>
